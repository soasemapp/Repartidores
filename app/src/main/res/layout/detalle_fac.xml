<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

 <com.google.android.material.textview.MaterialTextView
     android:id="@+id/titulo_detfac"
     android:layout_width="match_parent"
     android:layout_height="55dp"
     android:gravity="center"
     android:textSize="20dp"
     android:text="FACTURA"
     android:textColor="@color/white"
     android:textStyle="bold|italic"
     android:background="@color/ColorRojoTenue"
     />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

  <com.google.android.material.textview.MaterialTextView

      android:id="@+id/text_suc_df"
      android:layout_width="100dp"
      android:layout_height="wrap_content"

      android:layout_marginLeft="10dp"
      android:layout_marginTop="20dp"
      android:gravity="center"
      android:text="Sucursal:"
      android:textSize="15dp"
     />

   <com.google.android.material.textview.MaterialTextView

       android:id="@+id/id_suc_df"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="4dp"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:textSize="15dp"
       android:textColor="@color/black"/>



 </LinearLayout>


 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
  <com.google.android.material.textview.MaterialTextView

      android:id="@+id/text_folio_df"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="20dp"
      android:gravity="center"
      android:text="Folio:"
      android:textSize="15dp"
      />

    <TextView
        android:id="@+id/id_folio_df"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

 </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

   <com.google.android.material.textview.MaterialTextView

       android:id="@+id/text_cliente_df"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:layout_marginRight="4dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:text="Cliente:"
       android:textSize="15dp"
       />

    <TextView
        android:id="@+id/id_cliente_df"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"/>

  </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView

        android:id="@+id/text_nombre_df"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Nombre:"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/id_nombre_df"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

     <com.google.android.material.textview.MaterialTextView

         android:id="@+id/text_numpaq_df"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:layout_marginRight="4dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="20dp"
         android:gravity="center"
         android:text="Num. Paquetes:"
         android:textSize="15dp"
         />
    <TextView
        android:id="@+id/id_numpaq_df"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

    </LinearLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

      <com.google.android.material.textview.MaterialTextView

          android:id="@+id/text_tel1_df"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="4dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:gravity="center"
          android:text="Telefono 1:"
          android:textSize="15dp"
          />
    <TextView
        android:id="@+id/id_tel1_df"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

     </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

       <com.google.android.material.textview.MaterialTextView

           android:id="@+id/text_tel2_df"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_marginRight="4dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:gravity="center"
           android:text="Telefono 2:"
           android:textSize="15dp"
           />
    <TextView
        android:id="@+id/id_tel2_df"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

      </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

 <com.google.android.material.textview.MaterialTextView

     android:id="@+id/text_direccion_df"
     android:layout_width="100dp"
     android:layout_height="wrap_content"
     android:layout_marginRight="4dp"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="20dp"
     android:gravity="center"
     android:text="Direccion:"
     android:textSize="15dp"
     />
    <TextView
        android:id="@+id/id_direccion_df"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

      </LinearLayout>


</LinearLayout>