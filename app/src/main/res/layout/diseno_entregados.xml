<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txtNombreentreado"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_suc"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    >
                </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/trxFOLIO"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginBottom="5dp"
                    android:text="Folio: "
                    android:textSize="15dp"
                    android:textAlignment="center"

                    >
                </TextView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_foli_Entre"
                    android:textSize="15dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    >
                </TextView>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/trxFecha"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginBottom="5dp"
                        android:text="Fecha: "
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:drawableStart="@drawable/ic_fecha"
                        >
                    </TextView>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/id_fecha"
                        android:textSize="15dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/trx"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginBottom="5dp"
                    android:text="Recibio: "
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_us"
                    >
                </TextView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_quienrecibio"
                    android:textAlignment="textStart"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    >
                </TextView>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_detallefac"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:text="Detalle Factura"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/roundbutton"
                    />



            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>