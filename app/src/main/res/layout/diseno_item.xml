<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txttelefono1"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_telefonouno"
            android:textColor="@color/black"
            >
        </TextView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txttelefonodos"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_telefonodos"
            android:textColor="@color/black"
            >
        </TextView>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btn_detallefac"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Detalle Factura"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/roundbutton"
                />

            <ImageButton
                android:id="@+id/btn_iramap_lis"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_btnmap"
                android:backgroundTint="@color/ColorRojoTenue"
                android:background="@drawable/roundbutton"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btnntregar"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Entregado"
                android:textColor="@color/ColorRojoTenue"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#B3FFFFFF"

                />
            <Button
                android:id="@+id/btnpendiente"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Pendiente"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#B3FFFFFF"
                android:textColor="@color/ColorRojoTenue"

                />



        </LinearLayout>


    </LinearLayout>
    </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>