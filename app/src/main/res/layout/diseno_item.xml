<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/btn_detallefac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="0.2"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                    <ImageView
                        android:id="@+id/imgpendiente"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/icon_advertencia" />
                </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="80dp"
    android:paddingEnd="50dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtfol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/ic_fol"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txttelefono1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_telefonouno"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"></TextView>

    <TextView
        android:id="@+id/txttelefonodos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_telefonodos"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"></TextView>
</LinearLayout>


                <LinearLayout
                    android:id="@+id/viewcomentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/comentario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Comentario: "
                        android:textAlignment="center"
                        android:textSize="15dp"></TextView>

                    <TextView
                        android:id="@+id/id_comentario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15dp"></TextView>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/btnntregar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#B3FFFFFF"
                        android:layout_margin="5dp"
                        android:text="Entregado"
                        android:textColor="@color/ColorRojoTenue"
                        android:layout_weight="0.8"
                        />

                    <Button
                        android:id="@+id/btnpendiente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_margin="5dp"
                        android:backgroundTint="#B3FFFFFF"
                        android:text="Pendiente"
                        android:textColor="@color/ColorRojoTenue" />

                    <ImageButton
                        android:id="@+id/btn_iramap_lis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundbutton"
                        android:backgroundTint="@color/ColorRojoTenue"
                        android:src="@drawable/ic_btnmap" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>