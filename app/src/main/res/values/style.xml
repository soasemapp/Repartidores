<resources>
    <!-- Base application theme. -->

    <style name="CampoTEXBlanco" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#F7F3F2</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorHighlight">#F5EFEF</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorRojoTenue</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/red_500</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox." parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/DarkPrimaryColor</item>
        <item name="colorAccent">@color/AccentColor</item>
        <item name="startIconTintMode">@null</item>
    </style>

    <style name="ThemeOverlay.Material3.Button." parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/DarkPrimaryColor</item>
        <item name="colorAccent">@color/AccentColor</item>
        <item name="startIconTintMode">@null</item>
        <item name="android:textColor">@color/TextIcons</item>
        <item name="background">@drawable/roundbutton</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    </resources>